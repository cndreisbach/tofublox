<h2>New <%= @name  %></h2>

<%= form :action => R(BlockList) do
      input :type => 'hidden', :name => "block[type]", :value => @name 
      @mold.each do |field, type|
        div do
          label field.to_s.capitalize, :for => "block[#{field}]"
          form_field type, :name => "block[#{field}]"
        end
      end
      input :type => 'submit', :value => 'Create block'
    end %>
